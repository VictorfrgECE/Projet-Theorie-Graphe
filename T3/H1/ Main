import java.util.List;

public class Main {
    public static void main(String[] args) {
        String fichier = "graphe.txt";

        System.out.println("--- LOGICIEL DE COLLECTE DES DÉCHETS ---");

        // 1. Chargement
        List<Secteur> ville = TraitementGraphe.chargerGraphe(fichier);

        if (ville.isEmpty()) {
            System.out.println("Erreur : Graphe vide ou fichier introuvable !");
            return;
        }

        // 2. Calcul
        TraitementGraphe.appliquerWelshPowell(ville);

        // 3. Affichage Technique (L'algo trié par degré)
        TraitementGraphe.afficherTableauTechnique(ville);

        // 4. Affichage Client (Le planning propre)
        TraitementGraphe.afficherPlanningClient(ville);
    }
}
